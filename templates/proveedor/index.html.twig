{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/proveedores.css') }}">
{% endblock %}

{% block body %}

    <div class="titulo mt-3 d-flex justify-content-between">
        <h1>{{ title }}</h1>
        <a href="{{ path('paginaPrincipal') }}" class="btn btn-primary btn-dark">Crea Proveedor</a>
    </div>

    <table class="mt-3 table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th style="border-radius:5px 0 0 0;" scope="col" class="text-center">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Email</th>
                <th scope="col" class="text-center">Tel√©fono</th>
                <th scope="col" class="text-center">Tipo</th>
                <th scope="col" class="text-center">Activo</th>
                <th scope="col" colspan="3" style="border-radius:0 5px 0 0;" class="text-center">Operaciones</th>
            </tr>
        </thead>
        <tbody>
            {% for proveedor in proveedores %}
                <tr>
                    <th scope="row" class="text-center"></th>
                    <td>{{ proveedor.nombre|upper }}</td>
                    <td>{{ proveedor.email }}</td>
                    <td class="text-center">{{ proveedor.tfn }}</td>
                    <td class="text-center">{{ proveedor.tipo }}</td>
                    {% if proveedor.activo %}
                        <td class="text-center">Si</td>
                    {% else %}
                        <td class="text-center">No</td>
                    {% endif %}
                    <td class="text-center"><a href="{{ path('mostrarProveedor', { id: 1 }) }}"><i class="fas fa-eye"></i></a></td>
                    <td class="text-center"><a href="{{ path('editarProveedor', { id: 1 }) }}"><i class="fas fa-pen"></i></a></td>
                    <td class="text-center"><a href="{{ path('borrarProveedor', { id: 1 }) }}"><i class="fas fa-trash"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}